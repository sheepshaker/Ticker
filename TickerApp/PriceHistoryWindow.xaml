<Window x:Class="TickerApp.PriceHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TickerApp"
        mc:Ignorable="d"
        Title="PriceHistory" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Key}"></TextBlock>
            <DataGrid HorizontalAlignment="Stretch" AutoGenerateColumns="False" VerticalAlignment="Top" IsReadOnly="True" ItemsSource="{Binding Value.AllPrices}">
            <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding}"/>
            </DataGrid.Columns>
        </DataGrid>
        </StackPanel>
    </Grid>
</Window>
