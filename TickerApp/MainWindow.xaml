<Window x:Class="TickerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TickerApp"
        xmlns:vm="clr-namespace:Ticker;assembly=Ticker"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    
    <Window.DataContext>
        <vm:TickerViewModel/>
    </Window.DataContext>
    
    <Grid>
        <StackPanel>
        <TextBlock Text="{Binding TestN}"/>
        <TextBlock Text="{Binding TestValue}"/>
            <DataGrid Name="x" HorizontalAlignment="Stretch" AutoGenerateColumns="False" VerticalAlignment="Top" ItemsSource="{Binding Model}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Instrument Name" Binding="{Binding Key, StringFormat=N2}"/>
                    <DataGridTextColumn Header="Current Price" Binding="{Binding Value.CurrentPrice, StringFormat=N2}"/>
                    <DataGridTextColumn Header="Average Price" Binding="{Binding Value.AveragePrice, StringFormat=N2}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
